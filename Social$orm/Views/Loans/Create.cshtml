@model Social_orm.Models.Loans

@{
    ViewData["Title"] = "Create";
}
<br>
<h3>Loans Details</h3>
<br>
<hr />
<br>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="source" class="control-label"></label>
                <input asp-for="source" class="form-control" />
                <span asp-validation-for="source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reason" class="control-label"></label>
                <input asp-for="reason" class="form-control" />
                <span asp-validation-for="reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="amount" class="control-label"></label>
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="paymentfrequency" class="control-label"></label><br>
                <input asp-for="paymentfrequency" type="radio" name="paymentfrequency" value="weekly" /> Weekly<br>
                <input asp-for="paymentfrequency" type="radio" name="paymentfrequency" value="monthly" /> Monthly<br>
                <input asp-for="paymentfrequency" type="radio" name="paymentfrequency" value="yearly" /> Yearly<br>
                <span asp-validation-for="paymentfrequency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="paymentvalue" class="control-label"></label>
                <input asp-for="paymentvalue" class="form-control" />
                <span asp-validation-for="paymentvalue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtherDebts" class="control-label">Amount of other debts (if exists) :</label>
                <input asp-for="OtherDebts" class="form-control" placeholder="قيمة الديون الأخرى إن وجد" />
                <span asp-validation-for="OtherDebts" class="text-danger"></span>
            </div>
            @if (@ViewBag.Field == null)
            {
                <div class="form-group">
                    <input type="submit" value="Next" class="btn btn-primary" />
                </div>
                
            }
            else
            {
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>

<br>
@if (@ViewBag.Field != null)
{
    <form method="post" asp-action="Cancel">
        <div class="form-group">
            <input type="submit" value="Cancel" class="btn btn-danger" />
        </div>
    </form>
}

else
{
    <br>
    <form method="post" asp-action="Skip">
        <input type="submit" value="Skip if non" class="btn btn-secondary" />
    </form>
    <br>
    <form method="post" asp-action="Cancel2">
        <div class="form-group">
            <input type="submit" value="Cancel Creation" class="btn btn-danger" />
        </div>
    </form>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
