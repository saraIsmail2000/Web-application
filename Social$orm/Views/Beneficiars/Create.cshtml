@model Social_orm.Models.Beneficiar

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Beneficiar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceOfBirth" class="control-label"></label>
                <input asp-for="PlaceOfBirth" class="form-control" />
                <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecordPlace" class="control-label"></label>
                <input asp-for="RecordPlace" class="form-control" />
                <span asp-validation-for="RecordPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecordNumber" class="control-label"></label>
                <input asp-for="RecordNumber" class="form-control" />
                <span asp-validation-for="RecordNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nationality" class="control-label"></label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="list-group-horizontal">
                <label asp-for="sect" class="control-label">Sect</label>
                <select asp-for="sect" class="form-control">
                    <option>Shia</option>
                    <option>Sunna</option>
                    <option>Christian</option>
                    <option>Others</option>
                </select>
                <span asp-validation-for="sect" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Insured" /> @Html.DisplayNameFor(model => model.Insured)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialStatus" class="control-label"></label><br>
                @*<input asp-for="SocialStatus" type="radio" name="SocialStatus" id="SocialStatus" value="Single" /> Single <br>*@
                <input asp-for="SocialStatus" type="radio" name="SocialStatus" id="SocialStatus" value="Married" /> Married <br>
                <input asp-for="SocialStatus" type="radio" name="SocialStatus" id="SocialStatus" value="Dead" /> Dead<br>
                <input asp-for="SocialStatus" type="radio" name="SocialStatus" id="SocialStatus" value="Widowed" /> Divorced/Widowed<br>
                <span asp-validation-for="SocialStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HealthStatus" class="control-label"></label><br>
                <input asp-for="HealthStatus" type="radio" name="HealthStatus" id="HealthStatus" value="Good" /> Good <br>
                <input asp-for="HealthStatus" type="radio" name="HealthStatus" id="HealthStatus" value="Diseased" /> Diseased <br>
                <input asp-for="HealthStatus" type="radio" name="HealthStatus" id="HealthStatus" value="Handicaped" /> Handicaped <br>
                <span asp-validation-for="HealthStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HandicapType" class="control-label">Handicap Type (if exists)</label>
                <input asp-for="HandicapType" class="form-control" />
                <span asp-validation-for="HandicapType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<br>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
