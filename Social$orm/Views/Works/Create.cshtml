@model Social_orm.Models.Work



@{
    ViewData["Title"] = "Create";
}


@{
    string c = @ViewBag.result;
}

@if (ViewBag.Field == null)
{



    @if (@c == "Beneficiar")
    {
        <h3>
            Does the beneficiary @ViewBag.Name have a job ?
        </h3>

        <div class="row">
            <div>
                <form asp-action="Work" method="post">
                    <div class="col-auto">
                        <input type="submit" name="beneficiar" value="Yes" class="btn btn-primary" />
                        <input type="submit" name="beneficiar" value="No" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    }

    @if (@c == "Wife")
    {
        <h3>
            Does the beneficiary's wife @ViewBag.Name have a job ?
        </h3>

        <div class="row">
            <div>
                <form asp-action="Work" method="post">
                    <div class="col-auto">
                        <input type="submit" name="wife" value="Yes" class="btn btn-primary" />
                        <input type="submit" name="wife" value="No" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    }

    @if (@c == "Child")
    {
        <h3>
            Does the beneficiary's child @ViewBag.Name have a job ?
        </h3>

        <div class="row">
            <div>
                <form asp-action="Work" method="post">
                    <div class="col-auto">
                        <input type="submit" name="child" value="Yes" class="btn btn-primary" />
                        <input type="submit" name="child" value="No" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    }

    <br>
    <br>
}
<br>


@if (@ViewBag.create != null || ViewBag.Field != null)
{
    <h2>Work Details :</h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="sector" class="control-label"></label><br>
                    <input asp-for="sector" type="radio" name="sector" id="sector" value="حر" /> Free <br>
                    <input asp-for="sector" type="radio" name="sector" id="sector" value="ثابت" /> Fixed <br>
                    <input asp-for="sector" type="radio" name="sector" id="sector" value="متقطع" /> Intermittent <br>
                    <span asp-validation-for="sector" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TypeOfWork" class="control-label">Type of work for public sector :</label><br>

                    <input asp-for="TypeOfWork" type="radio" name="TypeOfWork" id="TypeOfWork" value="InternalSecurity" /> Internal Security <br>
                    <input asp-for="TypeOfWork" type="radio" name="TypeOfWork" id="TypeOfWork" value="Army" /> Army <br>
                    <input asp-for="TypeOfWork" type="radio" name="TypeOfWork" id="TypeOfWork" value="PublicServant" /> Public Servant <br>
                    <input asp-for="TypeOfWork" type="radio" name="TypeOfWork" id="TypeOfWork" value="Others" /> Others <br>
                    <span asp-validation-for="TypeOfWork" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TypeOfWork" class="control-label">Type of work for private sector :</label><br>

                    <input asp-for="TypeOfWork" type="radio" name="TypeOfWork" id="TypeOfWork" value="Farmer" /> Farmer <br>
                    <input asp-for="TypeOfWork" type="radio" name="TypeOfWork" id="TypeOfWork" value="Taxi Driver" /> Taxi Driver <br>
                    <input asp-for="TypeOfWork" type="radio" name="TypeOfWork" id="TypeOfWork" value="Employee" /> Employee <br>
                    <input asp-for="TypeOfWork" type="radio" name="TypeOfWork" id="TypeOfWork" value="Merchant" /> Merchant <br>
                    <input asp-for="TypeOfWork" type="radio" name="TypeOfWork" id="TypeOfWork" value="Others" /> Others <br>
                    <span asp-validation-for="TypeOfWork" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary" class="control-label">Salary (in LBP)</label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                @if (@ViewBag.Field == null)
                {
                    <div class="form-group">
                        <input type="submit" value="Next" class="btn btn-primary" />
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                }
            </form>
        </div>
    </div>

}


@if (@ViewBag.Field != null)
{
    <form method="post" asp-action="Cancel">
        <div class="form-group">
            <input type="submit" value="Cancel" class="btn btn-danger" />
        </div>
    </form>
}
else
{
    <form method="post" asp-action="Cancel2">
        <div class="form-group">
            <input type="submit" value="Cancel Creation" class="btn btn-danger" />
        </div>
    </form>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



