@model IEnumerable<Social_orm.Models.Disease>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiseaseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicineCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.beneficiar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.child)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.wife)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DiseaseType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.beneficiar.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.child.EducationLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.wife.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
