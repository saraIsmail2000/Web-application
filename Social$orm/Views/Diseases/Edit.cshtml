@model Social_orm.Models.Disease

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Disease</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="DiseaseType" class="control-label"></label>
                <input asp-for="DiseaseType" class="form-control" />
                <span asp-validation-for="DiseaseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicineName" class="control-label"></label>
                <input asp-for="MedicineName" class="form-control" />
                <span asp-validation-for="MedicineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicineCost" class="control-label"></label>
                <input asp-for="MedicineCost" class="form-control" />
                <span asp-validation-for="MedicineCost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BeneficiarID" class="control-label"></label>
                <select asp-for="BeneficiarID" class="form-control" asp-items="ViewBag.BeneficiarID"></select>
                <span asp-validation-for="BeneficiarID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChildID" class="control-label"></label>
                <select asp-for="ChildID" class="form-control" asp-items="ViewBag.ChildID"></select>
                <span asp-validation-for="ChildID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WifeID" class="control-label"></label>
                <select asp-for="WifeID" class="form-control" asp-items="ViewBag.WifeID"></select>
                <span asp-validation-for="WifeID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                
            </div>
        </form>
    </div>
</div>

<br>
<hr>
<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>

<br>
<form method="post" asp-action="Cancel">
    <input type="submit" value="Cancel" class="btn btn-secondary" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
