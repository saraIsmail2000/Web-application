@model Social_orm.Models.Belongings

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Belongings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="cars" class="control-label"></label>
                <input asp-for="cars" class="form-control" />
                <span asp-validation-for="cars" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="houses" class="control-label"></label>
                <input asp-for="houses" class="form-control" />
                <span asp-validation-for="houses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lands" class="control-label"></label>
                <input asp-for="lands" class="form-control" />
                <span asp-validation-for="lands" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rentIncomeType" class="control-label"></label>
                <input asp-for="rentIncomeType" class="form-control" />
                <span asp-validation-for="rentIncomeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rentIncomeAmount" class="control-label"></label>
                <input asp-for="rentIncomeAmount" class="form-control" />
                <span asp-validation-for="rentIncomeAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeneficiarID" class="control-label"></label>
                <select asp-for="BeneficiarID" class="form-control" asp-items="ViewBag.BeneficiarID"></select>
                <span asp-validation-for="BeneficiarID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                
            </div>
        </form>
    </div>
</div>

<br>
<hr>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>
<br>
<form method="post" asp-action="Cancel">
    <input type="submit" value="Cancel" class="btn btn-secondary" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
