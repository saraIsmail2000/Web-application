@model Social_orm.Models.Belongings

@{
    ViewData["Title"] = "Create";
}
<br>

<h3>Belongings</h3>
<br>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cars" class="control-label"></label>
                <input asp-for="cars" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="houses" class="control-label"></label>
                <input asp-for="houses" class="form-control" />
                <span asp-validation-for="houses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lands" class="control-label"></label>
                <input asp-for="lands" class="form-control" />
                <span asp-validation-for="lands" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rentIncomeType" class="control-label">Rent Income Type</label>
                <input asp-for="rentIncomeType" class="form-control" />
                <span asp-validation-for="rentIncomeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rentIncomeAmount" class="control-label">Total Rentings Income amount</label>
                <input asp-for="rentIncomeAmount" class="form-control" />
                <span asp-validation-for="rentIncomeAmount" class="text-danger"></span>
            </div>

            @if (@ViewBag.Field == null)
            {
                <div class="form-group">
                    <input type="submit" value="Next" class="btn btn-primary" />
                </div>
                
            }
            else
            {
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            }
        </form>
    </div>
</div>

<br>
@if (@ViewBag.Field != null)
{
    <form method="post" asp-action="Cancel">
        <div class="form-group">
            <input type="submit" value="Cancel" class="btn btn-danger" />
        </div>
    </form>
}
else
{
    <br>
<form method="post" asp-action="Skip">
    <input  type="submit" value="Skip if non" class="btn btn-secondary" />
</form>
    <br>
    <form method="post" asp-action="Cancel2">
        <div class="form-group">
            <input type="submit" value="Cancel Creation" class="btn btn-danger" />
        </div>
    </form>

}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
